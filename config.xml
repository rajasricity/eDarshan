<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.edarshan" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>eDarshan</name>
    <description>
        eDarshan
    </description>
    <author email="sanarajasekhar@gmail.com" href="https://edarshan.org">
        eDarshan Book Seva
    </author>
    <splash src="resources/splash.png" />
    <platform name="android">
    <icon src="resources/ldpi.png" density="ldpi" />
    <icon src="resources/mdpi" density="mdpi" />
    <icon src="resources/hdpi.png" density="hdpi" />
    <icon src="resources/xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="resources/hdpisp.png" density="port-hdpi"/>
    <splash src="resources/ldpisp.png" density="port-ldpi"/>
    <splash src="resources/mdpisp.png" density="port-mdpi"/>
    <splash src="resources/xhdpisp.png" density="port-xhdpi"/>
</platform>
<preference name="SplashScreen" value="screen" />
<preference name="Orientation" value="portrait" />
<preference name="SplashScreenDelay" value="5000" />
    <content src="index.html" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.2" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
</widget>
